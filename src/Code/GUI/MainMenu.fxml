<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Code.GUI.MainMenuController">
   <left>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="349.0" prefWidth="501.0">
               <children>
                  <Button fx:id="startSimulationButton" mnemonicParsing="false" onAction="#startSimulation" text="Start Simulation">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="Stop Simulation">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="addDistributorButton" mnemonicParsing="false" onAction="#addDistributor" text="Add Distributor">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="addClientButton" mnemonicParsing="false" onAction="#addClient" text="Add Client">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="addMovieButton" mnemonicParsing="false" onAction="#addMovie" text="Add Movie">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="addTVSeriesButton" mnemonicParsing="false" onAction="#addTVSeries" text="Add TV Series">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="Add Live Stream">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Button>
                  <Label fx:id="clientsCountLabel" />
                  <Label fx:id="distributorsCountLabel" />
                  <Label fx:id="moviesCountLabel" />
                  <Label fx:id="tvSeriesCountLabel" />
                  <Label fx:id="liveStreamsCountLabel" />
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </left>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="MainMenuButton" mnemonicParsing="false" onAction="#switchToMainMenu" text="Main Menu">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Button>
            <Button fx:id="switchToDistributorsPanelButton" mnemonicParsing="false" onAction="#switchToDistributorsPanel" text="Distributors Menu">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#switchToClientsMenu" text="Clients Menu">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#switchTProductsMenu" text="Products Menu">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
